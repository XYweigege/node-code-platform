{
    "name": "vue-action",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc -b && vite build",
        "preview": "vite preview",
        "lint:es": "eslint src/**/*.vue",
        "lint:style": "stylelint src/**/*.vue",
        "prepare": "husky",
        "spellcheck": "cspell lint --dot --gitignore --color --no-cache src/**/*.{ts,js,vue,json}",
        "commit": "git-cz",
        "test": "vitest"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    },
    "dependencies": {
        "pinia": "2.1.7",
        "vue": "3.4.31",
        "vue-router": "4.4.0",
        "smooth-dnd": "0.12.1",
        "vee-validate": "4.13.2"
    },
    "devDependencies": {
        "@eslint/js": "9.7.0",
        "@types/node": "^24.10.1",
        "@vitejs/plugin-vue": "5.0.5",
        "@vue/tsconfig": "^0.8.1",
        "eslint": "9.7.0",
        "eslint-plugin-simple-import-sort": "12.1.1",
        "eslint-plugin-vue": "9.27.0",
        "postcss-html": "^1.8.0",
        "stylelint": "16.26.1",
        "stylelint-config-recommended-vue": "1.6.1",
        "typescript": "5.5.3",
        "typescript-eslint": "7.16.0",
        "vite": "5.3.3",
        "vue-tsc": "2.0.26",
        "cspell": "8.10.4",
        "husky": "9.0.11",
        "commitlint": "19.3.0",
        "commitizen": "4.2.4",
        "cz-git": "1.9.3",
        "@commitlint/config-conventional": "19.2.2",
        "vitest": "2.0.2"
    }
}
